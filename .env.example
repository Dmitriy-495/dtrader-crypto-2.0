# Gate.io API Credentials
# Получить на: https://www.gate.io/myaccount/apiv4keys
GATE_API_KEY=your_api_key_here
GATE_API_SECRET=your_api_secret_here

# Настройки API
GATE_API_URL=https://api.gateio.ws
GATE_WS_URL=wss://api.gateio.ws/ws/v4/

# Интервалы (в секундах)
PING_INTERVAL=15

# Order Book
ORDER_BOOK_SYMBOL=ETH_USDT
ORDER_BOOK_DEPTH=20

# Log Broadcasting (трансляция логов клиентам)
LOG_BROADCAST_ENABLED=true
LOG_BROADCAST_PORT=8080

# Индикаторы
TICK_SPEED_WINDOW=1          # Окно для расчета скорости тиков (минуты)
TICK_SPEED_UPDATE_FREQ=20    # Частота обновления индикатора (каждые N тиков)
OB_PRESSURE_UPDATE_FREQ=50   # Частота обновления давления (каждые N обновлений стакана)
OB_PRESSURE_DEPTH=10         # Глубина стакана для расчета давления
OB_PRESSURE_WEIGHTED=true    # Взвешенный расчет по ценам

# Режим работы (production/testnet)
# Для testnet используйте: https://fx-api-testnet.gateio.ws
MODE=production